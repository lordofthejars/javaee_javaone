@import 'prism/themes/prism-okaidia.css'

pre.small
  font-size: .7em
  padding: 0

sup
  font-size: 0.3em
  position: relative
  top: -1.5em

li:before
  content: ''

h1 a
  border: none

h1.name
  font-size: 1.3em
  margin: 0

.avatar
  filter: grayscale(30%)
  width: 120px
  height: @width
  border-radius: 100%
  margin-bottom: .5em

.schemas
  width: 60%

.logos
  width: 600px

.cloudbees
  width: 150px
  margin: .5em 0

.two-columns
  -webkit-column-count: 3
  -moz-column-count: 3
  column-count: 3

.side-by-side
  display: inline-block;
  margin-left: auto;
  margin-right: auto;
  height: 400px;
  margin: 0.5em
.images
  text-align:center;

.bespoke-slide
  z-index: 1

pre
  padding: 2em !important

pre, code
  margin: 0 !important

.backdrop
  &--title
    background-image: url('../images/horse.jpg')
    background-position: 0 0
  &--matrix
    background-image: url('../images/matrix.gif')
    &.bespoke-backdrop-active
      opacity: 0.75
  &--prepare
    background: url('../images/prepare.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.75
  &--hotel
    background: url('../images/hotel.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.60
  &--rest
    background: url('../images/rest.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.60
  &--oldsec
