  &--ohno
    background: url('../images/ohno.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.60
  &--owasp
    background-color: white
    background-image: url('../images/owasp_logo.png')
    background-size: 30%
    background-repeat: no-repeat
    &.bespoke-backdrop-active
      opacity: 0.25
  &--jwt
    background-color: white
    background-image: url('../images/jwt_logo.svg')
    background-size: 40%
    background-repeat: no-repeat
    &.bespoke-backdrop-active
