      opacity: 0.60
  &--adarise
    background: url('../images/adarise.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.60
  &--tokens
    background: url('../images/tokens.jpg') no-repeat center center fixed
    background-size: cover
    &.bespoke-backdrop-active
      opacity: 0.40
  &--pirates
    background-image: url('../images/destroy.gif')
    &.bespoke-backdrop-active
      opacity: 0.75
  &--ending
    background-image: url('../images/ending.jpg')
    &.bespoke-backdrop-active
      opacity: 0.75
  &--poisonapple
    background-image: url('../images/poisonapple.gif')
    background-position: 50% 80%
    &.bespoke-backdrop-active
      opacity: 0.25
  &--backbonejs
    background-color: white
    background-image: url('../images/backbonejs.png')
    background-size: 30%
    background-repeat: no-repeat
    &.bespoke-backdrop-active
      opacity: 0.15
  &--angularjs
    background-color: white
    background-image: url('../images/angularjs.png')
    background-size: 30%
    background-repeat: no-repeat
    transition-delay: 1s
    &.bespoke-backdrop-active
      opacity: 0.15
    &.bespoke-backdrop-after
      transition-delay: 0s
    &.bespoke-backdrop-before
      transition-delay: 2s
  &--chrome
    background-image: url('../images/chrome.jpg')
  &--clojure
    background-image: url('../images/clojure.jpg')
    &.bespoke-backdrop-active
      opacity: 0.2
  &--petehunt
    filter: grayscale(50%)
    background-image: url('../images/petehunt.jpeg')
    background-position: 50% 0
    transform-origin: 50% 20%
    transition: opacity 1s ease, transform 16s ease
    &.bespoke-backdrop-active
      opacity: 0.2
  &--leebyron
    background-image: url('../images/leebyron.jpeg')
    transform-origin: 50% 40%
    &.bespoke-backdrop-active
      opacity: 0.25
  &--swannodette
    background-image: url('../images/swannodette.jpg')
    background-position: 50% 0
    transform-origin: 60% 40%
  &--raynos
    background-image: url('../images/raynos.jpeg')
    &.bespoke-backdrop-active
      opacity: 0.4
  &--mattesch
    background-image: url('../images/mattesch.png')
    background-position: 0 100%
    transform-origin: 20% 50%
  &--pascalhartig
    background-image: url('../images/pascalhartig.jpeg')
    background-position: 0 20%
    transform-origin: 30% 30%
    transition: opacity 1s ease, transform 16s ease
  &--nicolasgallagher
    background-image: url('../images/nicolasgallagher.jpeg')
    filter: grayscale(100%)
    transform-origin: 50% 40%
    transition: opacity 1s ease, transform 16s ease
  &--yellow
    background: #D2D22E
    &.bespoke-backdrop-active
      opacity: 1
  &--green
    background: #00CC00
    &.bespoke-backdrop-active
      opacity: 1
  &--still
    transition: opacity 1s ease
    transform: none
  &--bw
    filter: grayscale(100%)

.yellow
  color: black
  h1
    border-color: currentColor

.green
  color: black
  h1
    border-color: currentColor

.lists
  text-align: center
  list-style-type: none

.underline
  padding-bottom: 0.25em;
  border-top-color: rgb(221, 221, 221);
  border-top-style: solid;
  border-top-width: 0px;
  border-right-color: rgb(221, 221, 221);
  border-right-style: solid;
  border-right-width: 0;
  border-bottom-color: rgb(221, 221, 221);
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-left-color: rgb(221, 221, 221);
  border-left-style: solid;
  border-left-width: 0;

.important
  color: red

.green
  color: green

.yellowColor
  color: yellow

.blue
  color: blue

.title-single-words
    word-spacing: 9999px
    line-height: 1.5em
    overflow: hidden

.bespoke-slide aside
  display: none

.bullet.expand
  transition: all 2s ease
  opacity: 0
  overflow-x: hidden
  overflow-y: visible
  max-width: 0
  display: inline-block
  white-space: nowrap
  text-align: center
  line-height: 1.1em
  position: relative
  top: .2em
  &.bespoke-bullet-active
    opacity: 1
    max-width: 500px
